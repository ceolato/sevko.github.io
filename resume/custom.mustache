\documentclass[12pt,a4paper,sans]{moderncv}

\moderncvtheme[blue]{classic}

\usepackage[utf8]{inputenc}
\usepackage[margin=0.8in,scale=0.8]{geometry}
\usepackage{multicol}
\renewcommand*\sectionfont{\fontfamily{phv}\fontsize{15}{24}\selectfont}

<%#bio_data%>
	\firstname{<%&firstname%>}
	\familyname{\mbox{<%&familyname%>}}
	\title{\small <%#stars%><%#items%><%name%><%^last%> $\star$ <%/last%><%/items%><%/stars%>}
	<%#phone%>\phone{<%.%>}<%/phone%>
	<%#email%>\email{<%.%>}<%/email%>
	<%#raw_website%>\homepage{<%& .%>}<%/raw_website%>
	<%#linkedin_id%>\social[linkedin][<%& .%>]{<%& .%>}<%/linkedin_id%>
	<%#github_id%>\social[github][<%& .%>]{<%& .%>}<%/github_id%>

	% the ConTeXt symbol
	\def\ConTeXt{%
	  C%
	  \kern-.0333emo%
	  \kern-.0333emn%
	  \kern-.0667em\TeX%
	  \kern-.0333emt}

	% command and color used in this document, independently from moderncv
	\definecolor{see}{rgb}{0.0,0.0,0.8}% for web links
	\newcommand{\up}[1]{\ensuremath{^\textrm{\scriptsize#1}}}% for text subscripts
	\renewcommand{\labelitemi}{$\circ$}

	\begin{document}
	\maketitle
	\vspace*{-1.8cm}

	<%#skills%>
		\section{\textsc{##skills##}}
		<%#details%>
			\cvitem{}{\textbf{<%type%>}: <%#items%><%name%><%^last%>, <%/last%><%/items%>}
		<%/details%>
	<%/skills%>

	<%#experience%>
		\section{\textsc{Experience}}
		<%#items%>
		\cventry{<%from%> - <%to%>}{<%title%> \textnormal{at} <%organisation%>}{}{<%location%>}{}{
			{
				\begin{itemize}
					<%#details%>
						\item <%& .%>
					<%/details%>
				\end{itemize}
				}
			}
			\vspace*{0.2cm}
		<%/items%>
	<%/experience%>

	<%#other_projects%>
		\section{\textsc{Projects}}
		<%#items%>
			\cventry
			{<%time%>}
			{<%name%>}
			{<%headline%>}
			{}
			{}
			{}

			\vspace*{-0.15cm}
			\cvitem{}{
				{
					\begin{itemize}
					<%#points%>\item <%& .%><%/points%>
					<%#technology_used%>
					\item ##technology_used##:
					<%#tools%><%name%><%^last%>, <%/last%><%/tools%>
					<%/technology_used%>
					\end{itemize}
				}
			}
			\vspace*{-0.5cm}
		<%/items%>
	<%/other_projects%>

	<%#education%>
		\section{\textsc{##education##}}
		<%#schools%>
			\cventry
			{<%graduation_year%>}
			{<%degree%><%#major%>, <%major%><%/major%>}
			{<%institution%>}
			{}
			{<%#show_gpa%>##gpa##: <%gpa%><%/show_gpa%>}
			{}
			\vspace*{-0.10cm}
			\cvitem{}{
				{
					\begin{itemize}
						<%#details%>\item <%& .%><%/details%>
					\end{itemize}
				}
			}
		<%/schools%>
		\vspace*{-0.7cm}
	<%/education%>

	<%#competitions%>
		\section{\textsc{Competitions}}
		<%#details%>
			\cventry
			{<%date%>}
			{<%name%> \textnormal{| <%position%> | team} <%team%>}
			{}
			{}
			{}
			{}
		<%/details%>
	<%/competitions%>
<%/bio_data%>
\end{document}
